{
  "name": "escape-room-editor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
      "@testing-library/jest-dom": "^5.16.4",
      "@testing-library/react": "^13.3.0",
      "@testing-library/user-event": "^13.5.0",
      "chart.js": "^4.5.0",
      "pytest": "^1.0.0",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-router-dom": "^6.30.1",
      "react-scripts": "5.0.1",
      "web-vitals": "^2.1.4"
  },
  "devDependencies": {
      "@cypress/code-coverage": "^3.14.5",
      "@vitejs/plugin-react": "^4.7.0",
      "cypress": "^13.17.0",
      "istanbul-lib-coverage": "^3.2.2",
      "istanbul-lib-report": "^3.0.1",
      "istanbul-reports": "^3.1.7",
      "nyc": "^17.1.0",
      "vite": "^4.5.14",
      "vite-plugin-istanbul": "^7.1.0"
  },
  "scripts": {
      "start": "react-scripts start",
      "build": "react-scripts build",
      "test": "react-scripts test",
      "eject": "react-scripts eject",
      "cypress:open": "cypress open",
      "cypress:run": "cypress run",
    "cypress:run:ct": "cypress run --component",
    "ct:cov": "cypress run --component && nyc report --reporter=html --reporter=text-summary --report-dir coverage/ct --temp-dir .nyc_output",
    "postct:cov": "start \"\" \"coverage\\ct\\index.html\""
  },
  "eslintConfig": {
      "extends": [
          "react-app",
          "react-app/jest"
      ]
  },
  "browserslist": {
      "production": [
          ">0.2%",
          "not dead",
          "not op_mini all"
      ],
      "development": [
          "last 1 chrome version",
          "last 1 firefox version",
          "last 1 safari version"
      ]
  },
  "nyc": {
      "all": false,
      "extension": [
          ".js",
          ".jsx"
      ],
      "reporter": [
          "html",
          "text-summary",
          "lcov"
      ],
      "include": [
          "src/components/**/*.{js,jsx}"
      ],
      "exclude": [
          "test/**",
          "src/index.*",
          "src/App.jsx",
          "src/config.js"
      ],
      "report-dir": "coverage/ct",
      "temp-dir": ".nyc_output"
  }
}